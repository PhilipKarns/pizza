 <div class="full-width">
 	<img src="/assets/img/pizza.png" alt="Pizza">
 </div>

<h1>What kind of pizza do you want?</h1>

<div class="full-width">
	<div class="half-width">
		<h2>Pizzas available to eat</h2>
		<ul>
			{{#each pizzas}}
				{{#unless this.devoured}}
					<li>
						{{this.pizza_name}}

				        <form action="/{{this.id}}?_method=PUT" method="POST">
				          <input type="hidden" name="devoured" value="true">
				          <button type="submit">Devour It!</button>
				        </form>
				    </li>
				    <br>
			    {{/unless}}
			{{/each}}
		</ul>
	</div>

	<div class="half-width">
		<h2>Pizzas that have already been eaten</h2>
		<ul>
			{{#each pizzas}}
				{{#if this.devoured}}
					<li>
						{{this.pizza_name}}
					</li>
					<br>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>

<div class="full-width">
	<h2>Add a Pizza</h2>
	<form class="create-update-form" action="/" method="POST">

	  <div class="form-group">
	    <label for="pi">Pizza Name:</label>
	    <input type="text" id="pi" name="pizza_name">
	  </div>

	  <form>
	  	<input type="hidden" name="devoured" value="0">
		<button type="submit">Add Pizza</button>
	</form>
</div>


